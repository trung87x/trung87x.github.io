{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "strict": false,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "@/catalyst/*": ["./app/ui/catalyst/*"],
      "@/blocks/*": ["./app/ui/blocks/*"]
    }
  },
  "exclude": ["node_modules", ".next"]
}
